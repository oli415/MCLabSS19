<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="16dp"
    tools:layout_editor_absoluteY="16dp">

    <TextView
        android:id="@+id/label_acceleromter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/label_accelerometer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.732"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRecord" />

    <TextView
        android:id="@+id/textLabelRecord"
        android:layout_width="258dp"
        android:layout_height="20dp"
        android:text="@string/label_record"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RadioGroup
        android:id="@+id/radioActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioSitting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/radio_sitting" />

        <RadioButton
            android:id="@+id/radioStanding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/radio_standing" />

        <RadioButton
            android:id="@+id/radioWalking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/radio_walking" />

        <RadioButton
            android:id="@+id/radioUpstairs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/radio_upstairs" />

        <RadioButton
            android:id="@+id/radioDownstairs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/radio_downstairs" />

        <RadioButton
            android:id="@+id/radioJogging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/radio_jogging" />

    </RadioGroup>

    <Button
        android:id="@+id/btnRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/btn_record"
        app:layout_constraintStart_toStartOf="@+id/textLabelRecord"
        app:layout_constraintTop_toBottomOf="@+id/radioActivity" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/btn_stop"
        app:layout_constraintBottom_toBottomOf="@+id/btnRecord"
        app:layout_constraintStart_toEndOf="@+id/btnRecord"
        app:layout_constraintTop_toTopOf="@+id/btnRecord"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textRecordStatus"
        android:layout_width="188dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:text="@string/label_record_status_disabled"
        app:layout_constraintBottom_toBottomOf="@+id/btnRecord"
        app:layout_constraintStart_toEndOf="@+id/btnStop"
        app:layout_constraintTop_toTopOf="@+id/btnRecord"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textLog"
        android:layout_width="253dp"
        android:layout_height="133dp"
        android:layout_marginTop="188dp"
        android:text="@string/label_log_default"
        app:layout_constraintLeft_toLeftOf="@+id/label_acceleromter"
        app:layout_constraintTop_toBottomOf="@+id/label_acceleromter" />

    <TextView
        android:id="@+id/textPrediction"
        android:layout_width="270dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/label_prediction_status_disabled"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/btnPredict"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnPredict"
        app:layout_constraintTop_toTopOf="@+id/btnPredict"
        app:layout_constraintVertical_bias="1.0" />

    <ToggleButton
        android:id="@+id/btnPredict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="96dp"
        android:text="@string/btn_record_default_text"
        app:layout_constraintStart_toStartOf="@+id/textLabelPrediction"
        app:layout_constraintTop_toBottomOf="@+id/btnStop" />

    <TextView
        android:id="@+id/textLabelPrediction"
        android:layout_width="312dp"
        android:layout_height="20dp"
        android:layout_marginTop="64dp"
        android:text="@string/label_prediction"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textLabelRecord"
        app:layout_constraintTop_toBottomOf="@+id/btnStop" />


</android.support.constraint.ConstraintLayout>
